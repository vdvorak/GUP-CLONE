    <!--</mongo:mongo>-->
<!--
    <mongo:db-factory id="mongoDbFactory" mongo-ref="mongo" dbname="${mongo.remote.db.name}"
                      username="${mongo.remote.db.login}" password="${mongo.remote.db.password}"/>
-->
    <mongo:db-factory id="mongoDbFactory" uri="${mongo.remote.db.uri}" />

    <mongo:mapping-converter id="mongoConverter">
        <mongo:custom-converters>
            <mongo:converter>
                <bean class="ua.com.gup.config.mongo.converter.OAuth2AuthenticationReadConverter"/>
            </mongo:converter>
            <mongo:converter>
                <bean class="ua.com.gup.config.mongo.converter.JSR310DateConverters.DateToZonedDateTimeConverter"/>
            </mongo:converter>
            <mongo:converter>
                <bean class="ua.com.gup.config.mongo.converter.JSR310DateConverters.ZonedDateTimeToDateConverter"/>
            </mongo:converter>
        </mongo:custom-converters>
    </mongo:mapping-converter>

    <!--<bean id="mongoCredentials" class="org.springframework.data.authentication.UserCredentials">-->
    <!--<constructor-arg name="username" value="${mongo.remote.db.login}" />-->
    <!--<constructor-arg name="password" value="${mongo.remote.db.password}" />-->
    <!--</bean>-->

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate" >
        <constructor-arg name="mongoDbFactory" ref="mongoDbFactory" />
        <constructor-arg ref="mongoConverter"/>
    </bean>
</beans>