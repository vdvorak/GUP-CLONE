        <!--<task:scheduled ref="projectServiceImpl" method="bringBackMoneyToInvestors"
                        cron="0 0 4 * * *""/>-->
    </task:scheduled-tasks>

    <task:scheduler id="bringBackMoneyToInvestorsOfExpiredProjects"/>
</beans>