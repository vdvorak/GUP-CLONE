<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-4.2.xsd
	http://www.springframework.org/schema/mvc
	http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd">

    <!--<context:component-scan base-package="ua.com"/>-->
    <context:component-scan base-package="ua.com.gup.repository" />
    <context:annotation-config/>
    <context:property-placeholder location="classpath:properties/price.properties" />

    <mvc:annotation-driven/>
    <mvc:default-servlet-handler/>

    <import resource="root-context.xml"/>
    <import resource="mail.xml"/>
    <import resource="db/mongo.xml"/>
    <import resource="db/mongo-tasks.xml"/>
    <import resource="security/client-details.xml"/>
    <import resource="security/spring-security.xml"/>

</beans>