{
  "settings": {
    "analysis": {
      "filter": {
        "gramFilter": {
          "type": "nGram",
          "min_gram": 1,
          "max_gram": 50,
          "token_chars": [
            "letter",
            "digit"
          ]
        },
        "russian_stop": {
          "type": "stop",
          "stopwords": "_russian_"
        },
        "russian_stemmer": {
          "type": "stemmer",
          "language": "russian"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        }
      },
      "analyzer": {
        "gramAnalyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "filter": [
            "lowercase",
            "gramFilter"
          ]
        },
        "russian": {
          "tokenizer": "standard",
          "filter": [
            "lowercase",
            "russian_stop",
            "russian_stemmer"
          ]
        },

        "english": {
          "tokenizer": "standard",
          "filter": [
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_stemmer"
          ]
        }
      }
    }
  },
  "mappings": {
    "offer": {
      "properties": {
        "title": {
          "type": "text",

          "copy_to": [
            "title_ua",
            "title_ru",
            "title_en"
          ]
        },
        "title_ua": {
          "type": "text",
          "analyzer": "ukrainian"
        },
        "title_ru": {
          "type": "text",
          "analyzer": "russian"
        },
        "title_en": {
          "type": "text",
          "analyzer": "english"
        },
        "description": {
          "type": "text",
          "copy_to": [
            "description_ua",
            "description_ru",
            "description_en",
            "suggest"
          ]
        },
        "description_ua": {
          "type": "text",
          "analyzer": "ukrainian"
        },
        "description_ru": {
          "type": "text",
          "analyzer": "russian"
        },
        "description_en": {
          "type": "text",
          "analyzer": "english"
        },
        "suggest":{
          "analyzer": "gramAnalyzer",
          "type": "text"
        }
      }
    }
  }
}